{
  "manifest_version": 3,
  "name": "Stream Analytics",
  "version": "1.0.0",
  "description": "View detailed analytics after each Twitch stream",
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://*.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
